extends layout

block content
    div(class="col-xs-12 col-sm-12 col-md-12 col-lg-12")
        div(class="panel panel-default")
            div(class="panel-heading resume-heading")
                div(class="row header")
                    div(class="col-xs-4 col-xs-offset-4 col-sm-4 col-sm-offset-4 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4")
                        figure
                            img(class="img-responsive" alt="" src="/images/header.jpg")
            div(ng-app='telemetria')
                div(class="bs-callout bs-callout-danger" ng-controller='graficarCtrl')
                  //h1 {{greeting}}
                  h1= title
                  h2 Mostrando #{title} desde #{moment(Number(inicio)).format('HH:mm:s,SSS DD/MMM/YYYY')} a #{moment(Number(fin)).format('HH:mm:s,SSS DD/MMM/YYYY')}
                  h3 Sensores disponibles:
                  div(class="row")
                    select(class="col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-10 col-sm-10 col-md-10 col-lg-10" ng-model='seleccionados', multiple, ng-options='opcion.nombre for opcion in diccionarioObj track by opcion.nombre')
                  h3 Sensores a mostrar:
                  div(class="row")
                    select(class="col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-10 col-sm-10 col-md-10 col-lg-10" ng-model='seleccionadosQuitar', multiple, ng-options='opcion.nombre for opcion in graficados track by opcion.nombre')
                    //option(ng-repeat='opcion in diccionarioObj',value='opcion track by opcion.nombre')#[{{opcion.nombre}}]
                  button(ng-click='addSensors(seleccionados)')#[|AÃ±adir]
                  button(ng-click='removeSensors(seleccionadosQuitar)')#[|Quitar]
                  grafico(ng-repeat='parametro in graficados',id='parametro.id_trama + \"_\" + parametro.offset', inicio='#{inicio}',fin='#{fin}',obj='parametro')
                  #container(style={ 'min-width':'310px', height:'200px',margin:'0 auto' })

